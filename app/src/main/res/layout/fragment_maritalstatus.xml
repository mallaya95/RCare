<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maritalstatus">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_marginBottom="20dp">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="20dp"
           >

           <ImageView
               android:id="@+id/logmain"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:src="@drawable/maritalb"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="40dp"
           >
           <TextView
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:text="Are You  ?"
               android:textSize="20dp"
               android:gravity="center"
               android:textColor="@color/lbulishg"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           >
           <Button
               android:layout_width="300dp"
               android:layout_height="40dp"
               android:id="@+id/msingle"
               android:background="@drawable/ligthbutton"
               android:text="Single"
               android:textColor="@color/lbulishg"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           >
           <Button
               android:layout_width="300dp"
               android:layout_height="40dp"
               android:id="@+id/mmarried"
               android:background="@drawable/ligthbutton"
               android:text="Married"
               android:textColor="@color/lbulishg"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           >
           <Button
               android:layout_width="300dp"
               android:layout_height="40dp"
               android:id="@+id/mdivor"
               android:background="@drawable/ligthbutton"
               android:text="Divorced"
               android:textColor="@color/lbulishg"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           >
           <Button
               android:layout_width="300dp"
               android:layout_height="40dp"
               android:id="@+id/mwidow"
               android:background="@drawable/ligthbutton"
               android:text="Widowed"
               android:textColor="@color/lbulishg"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_gravity="center"
           >
           <Button
               android:layout_width="300dp"
               android:layout_height="40dp"
               android:id="@+id/msepared"
               android:background="@drawable/ligthbutton"
               android:text="Separated"
               android:textColor="@color/lbulishg"
               />
       </LinearLayout>

   </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employee">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/logmain"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/employee"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            >
            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Your occupation belongs to this nature"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/moffice"
                android:background="@drawable/ligthbutton"
                android:text="Office Assistant"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/clerical"
                android:background="@drawable/ligthbutton"
                android:text="Clerical"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/senioroff"
                android:background="@drawable/ligthbutton"
                android:text="Senior officer"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/Mang"
                android:background="@drawable/ligthbutton"
                android:text="Managerial"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/Seniormang"
                android:background="@drawable/ligthbutton"
                android:text="Senior Managerial"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <Button
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/topmang"
                android:background="@drawable/ligthbutton"
                android:text="Top Management"
                android:textColor="@color/lbulishg"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>